{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext"], // Keep only actual TypeScript libraries here
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "typeRoots": ["./node_modules/@types", "./src/types"], // Add a types directory

    // Bundler mode
    "moduleResolution": "bundler", // Changed from "node" to "bundler"
    "verbatimModuleSyntax": true,
    "noEmit": false,
    "noImplicitAny": false,

    // Source Map Configuration
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "declaration": true,
    "declarationMap": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,

    // Output configuration
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",

    // Path aliases - updated with index files
    "paths": {
      "$lib": ["src/lib/index"],
      "$lib/*": ["src/lib/*"],
      "$utils": ["src/utils/index"],
      "$utils/*": ["src/utils/*"],
      "$models": ["src/models/index"],
      "$models/*": ["src/models/*"],
      "$config": ["src/config"],
      "$telemetry": ["src/telemetry/index"],
      "$telemetry/*": ["src/telemetry/*"]
    },

    // Some stricter flags
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,

    // Additional recommended settings
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "src/global.d.ts", "__tests__/**/*"],
  "exclude": ["node_modules", "dist"]
}
