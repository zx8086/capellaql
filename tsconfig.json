{
  "compilerOptions": {
    // Latest TypeScript features
    "lib": ["ES2023", "DOM"],
    "target": "ES2023",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],

    // Bun-optimized bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "noEmit": false,
    "noImplicitAny": false,

    // Enhanced source map configuration for Bun
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "declaration": true,
    "declarationMap": true,

    // Strict type checking (Bun recommended)
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    // Module system optimizations
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    // Output configuration
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",

    // Enhanced path aliases for Bun
    "paths": {
      "$lib": ["src/lib/index"],
      "$lib/*": ["src/lib/*"],
      "$utils": ["src/utils/index"],
      "$utils/*": ["src/utils/*"],
      "$models": ["src/models/index"],
      "$models/*": ["src/models/*"],
      "$config": ["src/config"],
      "$telemetry": ["src/telemetry/index"],
      "$telemetry/*": ["src/telemetry/*"],
      "$graphql": ["src/graphql/index"],
      "$graphql/*": ["src/graphql/*"]
    },

    // Production-ready settings
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,

    // Bun-specific optimizations
    "useDefineForClassFields": true,
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false
  },
  "include": ["src/**/*", "src/global.d.ts", "**/*.test.ts"],
  "exclude": ["node_modules", "dist", ".bun-cache", "coverage", "test/k6/**/*.js", "tools/**/*"],
  "ts-node": {
    "esm": true
  },
  "bun-types": "latest"
}
