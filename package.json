{
  "name": "capellaql-service",
  "version": "2.0.0",
  "scripts": {
    "test": "bun run --sequential test:bun test:playwright",
    "test:bun": "bun test --coverage",
    "test:bun:watch": "bun test --watch",
    "test:bun:unit": "bun test src/**/*.test.ts",
    "test:bun:integration": "bun test tests/integration",
    "test:bun:e2e": "bun test tests/e2e",
    "test:bun:perf": "bun test src/**/*.test.ts --test-name-pattern='performance|benchmark'",
    "test:bun:ci": "bun test --coverage --reporter=junit --reporter-outfile=./test-results/bun-results.xml",
    "test:playwright": "bunx playwright test",
    "test:playwright:headed": "bunx playwright test --headed",
    "test:playwright:ui": "bunx playwright test --ui",
    "test:playwright:debug": "bunx playwright test --debug",
    "test:k6:smoke:health": "k6 run test/k6/smoke/health-smoke.ts",
    "test:k6:smoke:graphql": "k6 run test/k6/smoke/graphql-smoke.ts",
    "test:k6:smoke": "k6 run test/k6/legacy/smoke-test-health.js",
    "test:k6:smoke:all": "bun run --parallel test:k6:smoke:health test:k6:smoke:graphql",
    "test:k6:load:health": "k6 run test/k6/load/health-load.ts",
    "test:k6:load:graphql": "k6 run test/k6/load/graphql-load.ts",
    "test:k6:load:coverage": "k6 run test/k6/load/complete-graphql-coverage.ts",
    "test:k6:load": "k6 run test/k6/legacy/average-load-test-health.js",
    "test:k6:load:all": "bun run --parallel test:k6:load:health test:k6:load:graphql",
    "test:k6:stress:system": "k6 run test/k6/stress/system-stress.ts",
    "test:k6:stress": "k6 run test/k6/legacy/stress-test-health.js",
    "test:k6:spike": "k6 run test/k6/legacy/spike-test-health.js",
    "test:k6:soak": "k6 run test/k6/legacy/soak-test-health.js",
    "test:k6:scenario:buyer": "k6 run test/k6/scenarios/fashion-buyer-journey.ts",
    "test:k6:scenario:database": "k6 run test/k6/scenarios/database-connection-stress.ts",
    "test:k6:scenario:all": "bun run --parallel test:k6:scenario:buyer test:k6:scenario:database",
    "test:k6:graphql": "k6 run test/k6/legacy/graphql-endpoints.js",
    "test:k6:all:modern": "bun run --sequential test:k6:smoke:all test:k6:load:coverage test:k6:scenario:buyer",
    "test:k6:all:legacy": "bun run --sequential test:k6:smoke test:k6:load test:k6:graphql",
    "test:all": "bun run --sequential test:bun test:playwright test:k6:smoke:health",
    "dev": "bun run src/index.ts",
    "dev:verbose": "BUN_CONFIG_VERBOSE_FETCH=true bun run --hot --watch src/index.ts",
    "dev:debug": "BUN_CONFIG_VERBOSE_FETCH=true bun --inspect --hot --watch src/index.ts",
    "start": "bun run src/index.ts",
    "start:prod": "NODE_ENV=production bun run src/index.ts",
    "build": "bun run build.config.ts",
    "build:dev": "BUILD_TARGET=development bun run build.config.ts",
    "build:prod": "BUILD_TARGET=production bun run build.config.ts",
    "build:docker": "BUILD_TARGET=docker bun run build.config.ts",
    "build:serverless": "BUILD_TARGET=serverless bun run build.config.ts",
    "build:test": "BUILD_TARGET=test bun run build.config.ts",
    "build:analyze": "ANALYZE_BUNDLE=true BUILD_TARGET=production bun run build.config.ts",
    "build:metrics": "bun run -e \"import { autoBuild } from './build.config.ts'; await autoBuild();\"",
    "clean": "rm -rf dist node_modules/.cache .bun-cache coverage",
    "clean:all": "bun run clean && rm -rf node_modules bun.lockb",
    "typecheck": "bun --bun tsc --noEmit",
    "typecheck:watch": "bun --bun tsc --noEmit --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:unsafe": "biome check --write --unsafe .",
    "biome:check": "biome check .",
    "biome:check:write": "biome check --write .",
    "yaml:check": "yamllint .github/",
    "format": "biome format --write .",
    "quality": "bun run typecheck && bun run lint",
    "quality:fix": "bun run typecheck && bun run lint:fix && bun run format",
    "healthcheck": "bun run src/healthcheck.ts",
    "benchmark": "bun run src/utils/bunUtils.test.ts --filter='benchmark'",
    "perf:profile": "bun --profile run src/index.ts",
    "perf:heap": "bun --heap-snapshot run src/index.ts",
    "deps:check": "bun outdated",
    "deps:update": "bun update",
    "security:audit": "bun audit",
    "prepublish": "npm run snyk-protect",
    "snyk-protect": "snyk-protect",
    "docker:build": "./scripts/docker-build.sh",
    "docker:build:dev": "BUILD_TARGET=development ./scripts/docker-build.sh",
    "docker:build:multi": "MULTI_PLATFORM=true ./scripts/docker-build.sh",
    "docker:run": "docker run -p 4000:4000 --env-file .env zx8086/capellaql:latest"
  },
  "dependencies": {
    "@graphql-tools/schema": "10.0.31",
    "@graphql-yoga/plugin-response-cache": "3.20.0",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/api-logs": "0.212.0",
    "@opentelemetry/auto-instrumentations-node": "0.70.0",
    "@opentelemetry/core": "2.5.1",
    "@opentelemetry/exporter-logs-otlp-http": "0.212.0",
    "@opentelemetry/exporter-metrics-otlp-http": "0.212.0",
    "@opentelemetry/exporter-trace-otlp-http": "0.212.0",
    "@opentelemetry/host-metrics": "0.38.2",
    "@opentelemetry/instrumentation-graphql": "0.59.0",
    "@opentelemetry/instrumentation-http": "0.212.0",
    "@opentelemetry/instrumentation-redis-4": "0.49.0",
    "@opentelemetry/propagator-b3": "2.5.1",
    "@opentelemetry/propagator-jaeger": "2.5.1",
    "@opentelemetry/resources": "2.5.1",
    "@opentelemetry/sdk-logs": "0.212.0",
    "@opentelemetry/sdk-metrics": "2.5.1",
    "@opentelemetry/sdk-node": "0.212.0",
    "@opentelemetry/sdk-trace-node": "2.5.1",
    "@opentelemetry/semantic-conventions": "1.39.0",
    "@opentelemetry/winston-transport": "0.22.0",
    "@snyk/protect": "1.1302.1",
    "@types/k6": "1.6.0",
    "couchbase": "4.6.1",
    "dataloader": "2.2.3",
    "graphql": "16.12.0",
    "graphql-depth-limit": "1.1.0",
    "graphql-tag": "2.12.6",
    "graphql-yoga": "5.18.0",
    "prom-client": "15.1.3",
    "ulid": "3.0.2",
    "winston": "3.19.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@playwright/test": "1.58.2",
    "@types/bun": "1.3.9",
    "bun-types": "1.3.9"
  },
  "overrides": {
    "*/graphql": "^16.9.0",
    "*/axios": "1.7.8",
    "couchbase/cmake-js/axios": "^1.7.8",
    "**/axios": "^1.7.8"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "module": "src/index.ts",
  "type": "module",
  "trustedDependencies": [
    "couchbase",
    "protobufjs",
    "ws"
  ],
  "snyk": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "typescript": "^5.3.3",
      "bun-types": "latest",
      "@biomejs/biome": "^2.2.2",
      "zod": "^4.0.0",
      "graphql-yoga": "^5.10.0"
    }
  },
  "bun": {
    "test": {
      "coverage": {
        "include": [
          "src/**/*.ts"
        ],
        "exclude": [
          "src/**/*.test.ts",
          "src/**/*.spec.ts",
          "test/**/*"
        ],
        "threshold": {
          "line": 80,
          "function": 80,
          "branch": 70,
          "statement": 80
        }
      },
      "timeout": 30000,
      "bail": false
    },
    "build": {
      "target": "bun",
      "format": "esm",
      "splitting": true,
      "sourcemap": "external",
      "minify": false,
      "treeshaking": true
    }
  }
}
