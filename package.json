{
  "name": "capellaql",
  "version": "2.0.0",
  "scripts": {
    "test": "bun test --coverage",
    "test:watch": "bun test --watch",
    "dev": "bun run tools/dev.ts",
    "dev:simple": "BUN_CONFIG_VERBOSE_FETCH=true bun run --hot --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build ./src/index.ts --target=bun --outdir ./dist --sourcemap --minify",
    "build:dev": "bun build ./src/index.ts --target=bun --outdir ./dist --sourcemap --watch",
    "build:node": "bun build ./src/index.ts --target=node --outdir ./dist --sourcemap --minify",
    "clean": "rm -rf dist node_modules/.cache .bun-cache",
    "typecheck": "bun --bun tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "quality": "bun run typecheck && bun run lint",
    "healthcheck": "bun run src/healthcheck.ts",
    "prepublish": "npm run snyk-protect",
    "snyk-protect": "snyk-protect"
  },
  "dependencies": {
    "@opentelemetry/api-logs": "^0.54.2",
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/graphql-yoga": "^1.3.0",
    "@graphql-yoga/plugin-response-cache": "^3.15.6",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/core": "^1.28.0",
    "@opentelemetry/auto-instrumentations-node": "^0.59.0",
    "@opentelemetry/exporter-logs-otlp-http": "^0.201.1",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.201.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.201.1",
    "@opentelemetry/instrumentation-graphql": "^0.49.0",
    "@opentelemetry/instrumentation-http": "^0.201.1",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-logs": "^0.54.2",
    "@opentelemetry/sdk-metrics": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.201.1",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.34.0",
    "@opentelemetry/propagator-b3": "^1.28.0",
    "@opentelemetry/propagator-jaeger": "^1.28.0",
    "@snyk/protect": "^1.1297.1",
    "@types/k6": "^1.0.2",
    "couchbase": "^4.4.6",
    "elysia": "^1.3.3",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^5.13.5",
    "prom-client": "^15.1.3",
    "ulid": "^3.0.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/bun": "^1.2.15",
    "bun-types": "^1.2.15"
  },
  "overrides": {
    "*/graphql": "^16.9.0",
    "*/axios": "1.7.8",
    "couchbase/cmake-js/axios": "^1.7.8",
    "**/axios": "^1.7.8"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "module": "src/index.ts",
  "type": "module",
  "trustedDependencies": [
    "couchbase",
    "protobufjs",
    "ws"
  ],
  "snyk": true
}
